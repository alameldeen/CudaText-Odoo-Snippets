name=Odoo Tree View
id=otreev
lex=XML
text=
<record id="view_${1:Class}_tree" model="ir.ui.view">
    <field name="name">view.${2:Class}.tree</field>
    <field name="model">${2:Class}</field>
    <field name="arch" type="xml">
        <tree string="${30:Title}"${31: decoration-info="state == 'draft'" decoration-muted="state in ('done', 'cancel')"}>
            <field name="${4:FieldName}"/>
       </tree>
    </field>
</record>
${20}